package br.cafedamanha.fachada;

import java.util.ArrayList;

import br.cafedamanha.funcionario.Funcionario;
import br.cafedamanha.opcao.Opcao;

public class Teste {

	public static void main(String[] args) {
		Fachada fachada = Fachada.getInstance();
		ArrayList<Opcao> listaOpcoes = new ArrayList<Opcao>();
		Funcionario funcionario = new Funcionario("Adson Barbosa de Souza", "071.149.914-44");
		Opcao opcao = new Opcao("Salgadinho", funcionario);
		Opcao opcao2 = new Opcao("Café", funcionario);
		Opcao opcao3 = new Opcao("Pão", funcionario);
		listaOpcoes.add(opcao);
		listaOpcoes.add(opcao2);
		listaOpcoes.add(opcao3);
		funcionario.setListaOpcoes(listaOpcoes);
		funcionario.setIdFuncionario(1);
				
		fachada.cadastrarFuncionario(funcionario);
		
		System.out.println(fachada.listarFuncionario() +"\n"+ listaOpcoes.toString());

	}

}
